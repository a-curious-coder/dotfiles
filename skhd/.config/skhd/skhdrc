# Hypr-like keybindings for yabai.

# Launchers
cmd - return : open -na Ghostty
cmd - b : osascript -e 'tell application "Brave Browser" to make new window'

# Fullscreen
cmd + shift - f : yabai -m window --toggle zoom-fullscreen
cmd + ctrl - f : yabai -m window --toggle zoom-fullscreen

# Layout maintenance (use keycodes for parser compatibility)
cmd - 0x2c : yabai -m space --balance
cmd - 0x2b : yabai -m space --balance

# Focus (vim + arrows)
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

cmd - left  : yabai -m window --focus west
cmd - down  : yabai -m window --focus south
cmd - up    : yabai -m window --focus north
cmd - right : yabai -m window --focus east

# Move/warp window (vim + arrows)
cmd + shift - h : yabai -m window --warp west
cmd + shift - j : yabai -m window --warp south
cmd + shift - k : yabai -m window --warp north
cmd + shift - l : yabai -m window --warp east

cmd + shift - left  : yabai -m window --warp west
cmd + shift - down  : yabai -m window --warp south
cmd + shift - up    : yabai -m window --warp north
cmd + shift - right : yabai -m window --warp east

# Focus spaces 1-9
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9

# Move window to space + follow (Hypr movetoworkspace style)
cmd + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
cmd + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
cmd + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
cmd + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
cmd + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
cmd + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6
cmd + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7
cmd + shift - 8 : yabai -m window --space 8; yabai -m space --focus 8
cmd + shift - 9 : yabai -m window --space 9; yabai -m space --focus 9

# Move window to space silently (Hypr movetoworkspacesilent style)
cmd + ctrl - 1 : yabai -m window --space 1
cmd + ctrl - 2 : yabai -m window --space 2
cmd + ctrl - 3 : yabai -m window --space 3
cmd + ctrl - 4 : yabai -m window --space 4
cmd + ctrl - 5 : yabai -m window --space 5
cmd + ctrl - 6 : yabai -m window --space 6
cmd + ctrl - 7 : yabai -m window --space 7
cmd + ctrl - 8 : yabai -m window --space 8
cmd + ctrl - 9 : yabai -m window --space 9

# Workspace back-and-forth + move focused space to next display.
cmd - tab : yabai -m space --focus recent
alt + shift - tab : yabai -m space --display next; yabai -m display --focus next

# Cycle app windows in current space.
cmd - 0x32 : "$HOME/.config/yabai/scripts/cycle-app-windows.sh"
cmd + shift - 0x32 : "$HOME/.config/yabai/scripts/cycle-app-windows.sh" prev

# Reload services and reapply space bootstrap.
cmd + shift - r : "$HOME/.config/yabai/scripts/bootstrap-spaces.sh"; yabai --restart-service; skhd --reload

# Quick close and float toggle.
cmd - q : yabai -m window --close
cmd + shift - space : yabai -m window --toggle float
