# Aliases
# =======
# Organized by domain. Prefer explicit over clever.

alias v='nvim'
alias t='tmux attach'

# Git aliases
alias g='git'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git pull'
alias gs='git status'
alias gd='git diff'
alias gb='git branch'
alias gco='git checkout'
alias gcb='git checkout -b'

# Tmux aliases
alias tn='tmux new -s'
alias ta='tmux attach'
alias tl='tmux ls'
alias tk='tmux kill-session -t'
alias tka='tmux kill-server'
alias ts='tmux switch -t'

# Docker aliases
alias d='docker'
alias dc='docker-compose'
alias dps='docker ps'
alias di='docker images'
alias dex='docker exec -it'
alias dlogs='docker logs -f'

# LazyTools
alias ld='lazydocker'
alias lg='lazygit'

# File operations
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias mkdir='mkdir -p'

# System monitoring
if command -v btop &> /dev/null; then
    alias top='btop'
    alias htop='btop'
else
    alias htop='htop'
fi
alias df='df -h'
alias du='du -h'
alias free='free -h'

# Network
alias ports='netstat -tulanp'
alias ping='ping -c 5'

# Clipboard (Linux)
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# Quick edits
alias zshrc='$EDITOR ~/.zshrc'
alias aliases='$EDITOR ~/.zsh_aliases'
alias reload='source ~/.zshrc'

# Development
alias serve='python3 -m http.server 8000'
alias myip='curl -s ifconfig.me'

# === CTF & SECURITY ALIASES ===

# Network & Scanning
alias nse='nmap --script-help'
alias nmapquick='nmap -sC -sV -O'
alias nmapfull='nmap -sC -sV -O -p-'
alias masscanfast='masscan -p1-65535 --rate=10000'

# Web Application Testing
alias dirbuster='gobuster dir'
alias subdomains='sublist3r -d'
alias whatweb='whatweb --color=never'

# Forensics & Analysis
alias strings='strings -a'
alias hexdump='hexdump -C'
alias fileinfo='file -b'
alias entropy='binwalk -E'

# Crypto
alias b64d='base64 -d'
alias b64e='base64'
alias rot13='tr a-zA-Z n-za-mN-ZA-M'
alias md5='md5sum'
alias sha1='sha1sum'
alias sha256='sha256sum'

# Python security tools
alias pwntools='python3 -c "import pwn; pwn.context.update(arch=\"amd64\", os=\"linux\")"'
alias scapy='python3 -c "from scapy.all import *"'

# Quick servers
alias phpserver='php -S localhost:8000'
alias pyserver='python3 -m http.server'
alias nodeserver='npx http-server'

# === DATABASE SHORTCUTS ===
alias mysql='mysql -u root -p'
alias psql='psql -U postgres'
alias redis='redis-cli'
alias mongo='mongosh'

# === DOCKER SECURITY ===
alias dockerscan='docker run --rm -v /var/run/docker.sock:/var/run/docker.sock aquasec/trivy'
