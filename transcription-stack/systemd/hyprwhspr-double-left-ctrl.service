[Unit]
Description=Double Left Ctrl trigger for hyprwhspr
After=hyprwhspr.service graphical-session.target
Wants=hyprwhspr.service

[Service]
Type=simple
ExecStart=%h/.local/bin/hyprwhspr-double-left-ctrl.py
Restart=always
RestartSec=1
Environment=PATH=/usr/local/bin:/usr/bin:/bin

[Install]
WantedBy=default.target
